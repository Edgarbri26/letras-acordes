---
import Layout from "../layouts/Layout.astro";
import perro from "../assets/perro.gif";
---

<Layout title="404 - Página no encontrada">
    <div
        class="flex flex-col items-center justify-center min-h-screen text-center px-4"
    >
        <h1 class="text-4xl font-bold text-accent-main mb-2 animate-pulse">
            404
        </h1>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
            ¡Página no encontrada!
        </h2>
        <img
            src={perro.src}
            alt="Perro 404"
            class="w-64 h-64 object-cover rounded-full mb-8"
        />
        <p class="text-text-secondary text-lg mb-8 max-w-md">
            Parece que la página que buscas no existe o se ha movido a otro
            escenario.
        </p>
        <a
            href="/"
            class="bg-accent-main hover:bg-accent-secondary text-white font-bold py-3 px-8 rounded-lg transition-all transform hover:scale-105 active:scale-95 shadow-lg shadow-accent-main/20 flex items-center gap-2"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                viewBox="0 0 20 20"
                fill="currentColor"
            >
                <path
                    fill-rule="evenodd"
                    d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z"
                    clip-rule="evenodd"></path>
            </svg>
            Volver al Inicio
        </a>
    </div>
</Layout>
